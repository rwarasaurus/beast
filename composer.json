{
    "name": "rwarasaurus/beast",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Kieron",
            "email": "hello@madebykieron.co.uk",
            "homepage": "http://madebykieron.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7",
        "doctrine/dbal": "~2",
        "psr/container": "~1",
        "psr/http-message": "~1",
        "psr/http-server-middleware": "~1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2",
        "phpstan/phpstan": "~0",
        "phpunit/phpunit": "~7",
        "symfony/var-dumper": "~4"
    },
    "autoload": {
        "psr-4": {
            "Beast\\Framework\\": "src/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "psr": [
            "./bin/php-cs-fixer fix src/ --rules=@PSR2,no_unused_imports",
            "./bin/php-cs-fixer fix tests/ --rules=@PSR2,no_unused_imports"
        ],
        "uninstall": [
            "rm -rf ./bin",
            "rm -rf ./vendor",
            "rm ./composer.lock"
        ]
    }
}
